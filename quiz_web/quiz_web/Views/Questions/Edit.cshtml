@model quiz_web.Models.Questions

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Questions</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.coso)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.coso)
            @Html.ValidationMessageFor(model => model.coso)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.test_id)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.test_id)
            @Html.ValidationMessageFor(model => model.test_id)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
