@model IEnumerable<quiz_web.Models.Course>
@{
    ViewBag.Title = "Asociaciones";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}

<h2 class="text-center">Course information</h2>
<br />
    <strong>Course: </strong>
    <br />
    <strong class="text-warning">@ViewBag.infoCourse.name</strong>
<br />
<table class ="table table-striped table-bordered">
    <tr>
        <th>
            Professor
        </th>
        <th>
            Action
        </th>
    </tr>
@foreach (var item2 in ViewBag.professorsCourse)
{
    if(@item2.name != "")
    {
    <tr>
        <th> @item2.name @item2.lastname </th>
        <th>@Html.ActionLink("Delete", "DeleteProfessorCourse",new { idProfessor = item2.ID, idCourse = ViewBag.infoCourse.ID },new { @class = "btn btn-danger btn-mini" })</th>
    </tr>
    }
    else
    {
        <tr>
            Not professor
        </tr>
        <tr>
            Not action
        </tr>
    }
}
</table>
<br/>
<h2>Students course</h2>
<table class ="table table-striped table-bordered">
    <tr>
        <th>
            Email
        </th>
        <th>
            Identification
        </th>
        <th>
            Name
        </th>
        <th>
            LastName
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in ViewBag.studentsCourse)
    {
        <tr>
            <td>
                @item.email
            </td>
            <td>
                @item.identification
            </td>
            <td>
                @item.name
            </td>
            <td>
                @item.lastname
            </td>
            <td>
            @Html.ActionLink("Delete", "DeleteStudentCourse",new { idStudent = item.ID, idCourse = ViewBag.infoCourse.ID },new { @class = "btn btn-danger btn-mini" })
            </td>
        </tr>
    }
</table>
<h2>New students</h2>
<table class ="table table-striped table-bordered">
    <tr>
        <th>
            UserName
        </th>
        <th>
            Email
        </th>
        <th>
            Identification
        </th>
        <th>
            Name
        </th>
        <th>
            LastName
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var itemNs in ViewBag.notStudentCourse)
    {
        <tr>
            <td>
                @itemNs.username
            </td>
            <td>
                @itemNs.email
            </td>
            <td>
                @itemNs.identification
            </td>
            <td>
                @itemNs.name
            </td>
            <td>
                @itemNs.lastname
            </td>
            <td>
            @Html.ActionLink("Add to course", "AddStudentCourse",new { idStudent = itemNs.ID, idCourse = ViewBag.infoCourse.ID },new { @class = "btn btn-success btn-mini" })
            </td>
        </tr>
   }
</table>
@foreach (var item2 in ViewBag.professorsCourse)
{
    return;
}
<h2>Add professor</h2>
<table class ="table table-striped table-bordered">
    <tr>
        <th>
            UserName
        </th>
        <th>
            Email
        </th>
        <th>
            Identification
        </th>
        <th>
            Name
        </th>
        <th>
            LastName
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var itemNs in ViewBag.notProfessors)
    {
        <tr>
            <td>
                @itemNs.username
            </td>
            <td>
                @itemNs.email
            </td>
            <td>
                @itemNs.identification
            </td>
            <td>
                @itemNs.name
            </td>
            <td>
                @itemNs.lastname
            </td>
            <td>
            @Html.ActionLink("Add professor to course", "AddProfessorCourse",new { idProfessor = itemNs.ID, idCourse = ViewBag.infoCourse.ID },new { @class = "btn btn-success btn-mini" })
            </td>
        </tr>
   }
</table>
