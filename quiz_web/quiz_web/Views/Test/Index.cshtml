@model IEnumerable<quiz_web.Models.Test>

@{
    ViewBag.Title = "Course's test";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}

<h2>Course's test</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { idCourse = @ViewBag.Idcourse  }, new { @class = "btn btn-success btn-mini" })
</p>
<table class ="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duration)
        </td>
        <td>
            @Html.ActionLink("Questions","Index", "Questions", new { id=item.ID , idCourse = item.course_id }, new { @class = "btn btn-primary btn-mini" })
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "btn btn-danger btn-mini" })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Course", "Index", "Course",null, new { @class = "btn btn-info btn-mini" })